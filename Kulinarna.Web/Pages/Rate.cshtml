@page "{recipeId:int?}"
@model Kulinarna.Web.Pages.RateModel
@{
    ViewData["Title"] = "Rate " + Model.Recipe.Name;
}

<div class="text-center">
    <h1>Rate this recipe</h1>

    <br />


    <form method="post">

        <input type="hidden" asp-for="Rating.Id" />
        <input type="hidden" asp-for="Rating.AuthorId" />
        <input type="hidden" asp-for="Rating.RecipeId" />



        <select asp-for="Value">

            <option value="0">None</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <br />
        <br />
        <button type="submit">Save</button>
    </form>

</div>



