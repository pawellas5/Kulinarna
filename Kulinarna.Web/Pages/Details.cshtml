@page "{recipeId:int}"
@model Kulinarna.Web.DetailsModel
@{
    ViewData["Title"] = Model.RecipeDTO.Name;
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}



<h2>@Model.RecipeDTO.Name</h2>
<h4 style="font-style: italic;color: #555;">author: @Model.RecipeDTO.AuthorName</h4>


<div>@Model.RecipeDTO.Content</div>

<a asp-page="./Index" class="btn btn-link">
    <i class="fas fa-arrow-left"></i> Back

</a>


